{
  "manifest_version": 2,
  "name": "Auth Token Grabber",
  "version": "0.0",
  "offline_enabled": true,

  "background": {
    "persistent": false,
    "scripts": ["dist/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://localhost:*/*"],
      "js": ["dist/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
